          <div class="col-xs-12 days">
            <% for (i = 0 ; i < 5 ; i++ ){ %>
              <div id="chooseDate" name="<%=available_days[i].format('L') %>" data-selected='false'>
                <div class="dayContainer">
                  <div class="day">
                    <span class="dayName"><%=available_days[i].format('ddd')%></span>
                    <span class="dayNumber"><%=available_days[i].format('DD')%></span>
                  </div>
                </div>
              </div>
            <% } %>
            <!-- <div id="chooseDate" name="<%=available_days[0].format('L') %>">
